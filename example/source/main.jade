doctype html
html(lang="en")
  head
    title=title
    link(rel="stylesheet" type="text/css" href="/main.css")
    link(rel="icon" type="image/png" href="/PennApps-lightblue.png")
    link(href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,400,300,700' rel='stylesheet' type='text/css')
    link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
    meta(http-equiv="content-type" content="text/html;charset=utf-8")

  body
    .header
      a(href="http://pennapps.com")
        h1#logo PennApps&nbsp;
          span.num XVI
    .container
      - // output document structure as nested lists with links
      mixin structureToList(node, isTop)
        if !isTop
          a(href='#' + node[1])=node[0]
        if node.length > 2
          ul
            - for (var i = 2; i < node.length; i++)
              li
                +structureToList(node[i], false)

      - var structure = getStructure(content);
      - // only display if structure exists and has subheadings
      if structure && structure.length > 2
        .body-content.col-md-8!=content
        .toc.col-md-4.hidden-sm.hidden-xs
          +structureToList(structure, true)
      else
        .body-content.col-md-8.col-md-offset-2!=content

    // Footer
    .footer-section
      .row
        .col-lg-3.col-sm-6
          .footer-col
            a(href='#home')
              img(src='/PennApps-white.png', width='50px')
            p &copy; 2017 PennApps
            p
              a(href='mailto:contact@pennapps.com') contact@pennapps.com
              | .
        .col-lg-3.col-sm-6
          .footer-col

        .col-lg-3.col-sm-6
          .footer-col
            p
              a(href='https://www.facebook.com/pennapps') Facebook
            p
              a(href='https://twitter.com/pennapps') Twitter
        .col-lg-3.col-sm-6
          .footer-col
            p Organized with support from:
          a(href='http://www.seas.upenn.edu')
            img.penn-logo(src='/penn-logo.png')
    // footer-section
